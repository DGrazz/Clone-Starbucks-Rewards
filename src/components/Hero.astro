---
import Button from './Button.astro';
---

<header class="banner">
    <div>
        <h1>starbucks<span>Â®</span>rewards</h1>
    </div>
</header>

<section>
    <div class="section">
        <div class="content">
            <h2>Free coffee <br> is a tap away</h2>
            <p class="subtitle">Join now to start earning Rewars.</p>
            <Button title="Join now"/>
            <p class="cta-subtitle">Or <span>join in the app</span>for the best experience</p>
        </div>
    </div>
</section>

<style>
    header {
        position: sticky;
        top: 0;
        width: 100%;
        background-color: var(--darkGreen);
        box-shadow:
            0 4px 4px 0 rgba(0, 0, 0, 0.12),
            0 0 2px 0 rgba(0, 0, 0, 0.24);
            z-index: 10;
        }
        header div {
        height: 6.5vh;
        display: flex;
        align-items: center;
    }
    header h1 {
        text-transform: uppercase;
        color: white;
        font-weight: 900;
        font-size: 16px;
        margin: 0 10%;
        display: flex;
    }
    header h1 span{
        font-size: 12px;
        margin-right: 5px;
    }

    section {
        width: 100%;
        height: 90vh;
        background-color: rgb(212, 233, 226);
        background-image: url(../../public/hero.webp);
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
    }
    .section{
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-items: center;
    }
    .content{
        min-width: 50%;
        padding: 0% 8%;
        text-align: left;
    }
    .content h2{
        font-size: 36px;
        font-weight: bold;
        letter-spacing: 2px;
        text-transform: uppercase;
    }
    .content p{
        font-size: 19px;
    }
    .subtitle{
        margin-top: 20px;
        margin-bottom: 30px;
    }
    .cta-subtitle{
        margin-top: 10px;
    }
    .cta-subtitle span{
        text-decoration: underline;
    }
    .content button{
        margin: 1000px;
    }
</style>
